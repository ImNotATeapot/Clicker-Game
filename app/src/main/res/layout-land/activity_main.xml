<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="itp341.a4.MainActivity"
    android:background="#685252">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="320dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/layout_padding"
                android:layout_marginTop="32dp"
                android:background="#40000000"
                android:gravity="center"
                android:text="@string/gameTitle"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="#40000000"
                android:gravity="center"
                android:text="@string/dogetitle"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textViewDogeCount"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#40000000"
                android:gravity="center"
                android:text="@string/initialDogeValue"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />

            <ImageButton
                android:id="@+id/imageButtonMocha"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:src="@drawable/doge" />

            <ImageButton
                android:id="@+id/infoButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|center_horizontal"
                android:layout_marginTop="-40dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="80dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:src="@drawable/info" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_heights"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="@dimen/button_heights"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        app:srcCompat="@drawable/shoes" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="@string/textShoes"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@color/textViewColor"
                            tools:textStyle="bold" />

                        <TextView
                            android:id="@+id/shoesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="@string/initialDogeValue"
                            android:textColor="@color/subTextColor"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewShoesCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="16dp"
                        android:text="@string/initialDogeValue"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="#3cffffff"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonBuyShoe"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_heights"
                    android:background="@drawable/textbox" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_heights"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="@dimen/button_heights"
                        android:layout_height="match_parent"
                        android:padding="4dp"
                        app:srcCompat="@drawable/cookie" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="@string/textTreats"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/treatsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="@string/initialDogeValue"
                            android:textColor="@color/subTextColor"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewTreatsCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="16dp"
                        android:text="@string/initialDogeValue"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="#3CFFFFFF"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/buttonBuyTreat"

                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_heights"
                    android:background="@drawable/textbox" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_heights"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/button_heights"
                        android:layout_height="match_parent"
                        android:padding="4dp"
                        app:srcCompat="@drawable/lady" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="@string/textHuman"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            tools:textStyle="bold" />

                        <TextView
                            android:id="@+id/humanTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="@string/initialDogeValue"
                            android:textColor="@color/subTextColor"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewHumanCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:gravity="right"
                        android:text="@string/initialDogeValue"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="#3cffffff"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/buttonBuyHuman"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_heights"
                    android:background="@drawable/textbox" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_heights"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/button_heights"
                        android:layout_height="match_parent"
                        android:padding="4dp"
                        app:srcCompat="@drawable/hydrant" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="@string/textFireHydrant"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hydrantTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="@string/initialDogeValue"
                            android:textColor="@color/subTextColor"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewHydrantCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:gravity="right"
                        android:text="@string/initialDogeValue"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="#3cffffff"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/buttonBuyHydrant"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_heights"
                    android:background="@drawable/textbox" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
